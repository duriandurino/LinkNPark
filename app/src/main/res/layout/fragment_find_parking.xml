<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Map View (background layer) -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Search Bar (top layer) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@android:color/white">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_search"
                android:contentDescription="Search icon"
                app:tint="@android:color/darker_gray" />

            <EditText
                android:id="@+id/etSearchParkingLots"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:hint="Search parking lots..."
                android:background="@android:color/transparent"
                android:textSize="16sp"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionSearch" />

            <ImageButton
                android:id="@+id/btnClearSearch"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Clear search"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Filter Chips -->
    <HorizontalScrollView
        android:id="@+id/filterScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginStart="12dp"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFilters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="false"
            app:chipSpacingHorizontal="8dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                app:chipBackgroundColor="@color/chip_filter_background"
                app:checkedIconVisible="true"
                android:checked="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMotorcycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸï¸ Motorcycle"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                app:chipBackgroundColor="@color/chip_filter_background"
                app:checkedIconVisible="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš— Car"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                app:chipBackgroundColor="@color/chip_filter_background"
                app:checkedIconVisible="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSUV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš™ SUV"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                app:chipBackgroundColor="@color/chip_filter_background"
                app:checkedIconVisible="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPriceLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’° Price: Low"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                app:chipBackgroundColor="@color/chip_filter_background"
                app:checkedIconVisible="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipNearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Nearby"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                app:chipBackgroundColor="@color/chip_filter_background"
                app:checkedIconVisible="true" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Parking Lots List (List View) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvParkingLots"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp"
        android:visibility="gone"
        android:background="@color/background_secondary" />

    <!-- Toggle View Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabToggleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:contentDescription="Toggle list view"
        android:src="@android:drawable/ic_menu_sort_by_size"
        app:fabSize="normal" />

    <!-- My Location Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="My location"
        android:src="@android:drawable/ic_menu_mylocation"
        app:fabSize="normal" />

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
