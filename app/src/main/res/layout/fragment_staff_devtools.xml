<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”§ Staff DevTools"
            android:textSize="24sp"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bulk operations for testing and debugging"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp" />

        <!-- User Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvCurrentUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="13sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="monospace" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Stats Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvSpotStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spots: loading..."
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvSessionStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sessions: loading..."
                    android:textSize="14sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Spot Management Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BULK SPOT OPERATIONS"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMarkAllAvailable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âœ… Mark All Available"
            android:textAllCaps="false"
            app:cornerRadius="8dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMarkAllOccupied"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸš— Mark All Occupied"
            android:textAllCaps="false"
            app:cornerRadius="8dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRandomizeSpots"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ² Randomize Spot Statuses"
            android:textAllCaps="false"
            app:cornerRadius="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Session Management Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SESSION GENERATORS"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateRandomSessions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš¡ Create 5 Random Sessions"
            android:textAllCaps="false"
            app:cornerRadius="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Data Reset Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATA RESET (USE WITH CAUTION)"
            android:textSize="12sp"
            android:textColor="@color/status_occupied"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearAllSessions"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ—‘ï¸ Clear All Sessions"
            android:textAllCaps="false"
            android:textColor="@color/status_occupied"
            app:strokeColor="@color/status_occupied"
            app:cornerRadius="8dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResetAllSpots"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”„ Reset All Spots to Available"
            android:textAllCaps="false"
            android:textColor="@color/status_occupied"
            app:strokeColor="@color/status_occupied"
            app:cornerRadius="8dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRefreshStats"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”„ Refresh Stats"
            android:textAllCaps="false"
            app:cornerRadius="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Debug Log Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEBUG LOG"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="#1A1A1A">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvDebugLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Ready..."
                    android:textSize="11sp"
                    android:textColor="#00FF00"
                    android:fontFamily="monospace" />

            </ScrollView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
